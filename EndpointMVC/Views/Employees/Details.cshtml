@model EndpointMVC.Models.Employee

<h1>Employee Details</h1>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <div>
        <strong>Salary:</strong> @Model.Salary.ToString("C")<br />
        <strong>Position:</strong> @Model.Position<br />
        <strong>Department ID:</strong> @Model.DepartmentId<br />
    </div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.EmployeeId">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
