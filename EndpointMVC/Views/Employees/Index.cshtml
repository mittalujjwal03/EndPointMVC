@model IEnumerable<EndpointMVC.Models.Employee>

<h1>Employees</h1>
<a asp-action="Create">Create New Employee</a>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Salary</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Salary.ToString("C")</td>
                <td>@employee.Position</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.EmployeeId">View</a> |
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
